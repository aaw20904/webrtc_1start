{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program with sudo",
            "runtimeExecutable": "sudo",
            "runtimeArgs": ["node"],
            "program": "${workspaceFolder}/app.js",
            "skipFiles": ["<node_internals>/**"],
            "outFiles": ["${workspaceFolder}/**/*.js"]
        }
    ]
}
